<%- layout('layouts/main')  %> 

<!-- Login -->
<form action="/loginEmpleados" method="POST">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card text-white bg-customlogin" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
              <p class="text-white-50 mb-5">Ingrese su email y contraseña</p>

              <div class="form-outline form-white mb-4">
                <input type="email" name="email" id="emlEmail" class="form-control form-control-lg" required/>
                <label class="form-label" for="emlEmail">Email</label>
              </div>

              <div class="form-outline form-white mb-4">
                <input type="password" name="psw" id="passPsw" class="form-control form-control-lg" required/>
                <label class="form-label" for="passPsw">Contraseña</label>
              </div>

              <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">¿Olvidó su contraseña?</a></p>

              <button class="btn btn-outline-light btn-lg px-5" type="submit">Iniciar Sesión</button>

            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</form>